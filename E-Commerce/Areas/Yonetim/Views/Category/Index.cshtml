@model List<EntityLayer.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <h2 class="text-center mb-4">Kategori Listesi</h2>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th style="width:120px"> Kategori Fotoğrafı</th>
                <th>Kategori Adı</th>
                <th>Durum</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>
                    <img width="100" height="100" src="@item.CategoryImage" />
                </td>
                <td>@item.CategoryName</td>
                <td>@item.Status</td>
                <td><a href="/Yonetim/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Yonetim/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Yonetim/Category/AddCategory" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
    <br />
    <br />
    <br />

</div>
