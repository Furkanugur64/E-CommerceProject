@model EntityLayer.Concrete.Brand
@{
    ViewData["Title"] = "AddBrand";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">

    <h1 style="text-align:center">Marka Ekleme Sayfası</h1>


    <form method="post">


        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.categoryVlc, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID)
        <br />
        <label>Kategori Adı</label>
        <input name="BrandName" class="form-control" />
        <br />
        <button class="btn btn-info">Kaydet</button>
    </form>

</div>