@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_RegisterLoginLayout.cshtml";
}
<br />
<div class="w3layouts-main" style="margin-top:50px">
    <h2><span>Admin Giriş Sayfası</span></h2>
    
        <form method="post">
            <div class="form-group">                
                <input type="text" placeholder="Kullanıcı Adı" class="form-control" id="UserName" name="UserName" required>
            </div>
            <div class="form-group">               
                <input type="password" placeholder="Şifre" class="form-control" id="Password" name="Password" required>
            </div>
            <input type="submit" value="Giriş Yap" name="login">
        </form>

</div>

                        
                
